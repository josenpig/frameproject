<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xingji.frameproject.mybatis.dao.PurchaseReceiptDetailsDao">
    <!-- 结果集 -->
    <resultMap type="com.xingji.frameproject.mybatis.entity.PurchaseReceiptDetails" id="PurchaseReceiptDetailsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="receiptid" column="receiptid" jdbcType="VARCHAR"/>
        <result property="productId" column="product_id" jdbcType="VARCHAR"/>
        <result property="depotName" column="depot_name" jdbcType="VARCHAR"/>
        <result property="productNum" column="product_num" jdbcType="INTEGER"/>
        <result property="plannedPrice" column="planned_price" jdbcType="NUMERIC"/>
        <result property="purchaseMoney" column="purchase_money" jdbcType="NUMERIC"/>
    </resultMap>

    <resultMap type="com.xingji.frameproject.mybatis.entity.PurchaseReceiptDetails" id="PurchaseReceiptDMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="receiptid" column="receiptid" jdbcType="VARCHAR"/>
        <result property="productName" column="product_name" jdbcType="VARCHAR"/>
        <result property="productId" column="product_id" jdbcType="VARCHAR"/>
        <result property="depotName" column="depot_name" jdbcType="VARCHAR"/>
        <result property="productNum" column="product_num" jdbcType="INTEGER"/>
        <result property="productUnit" column="unit_name" jdbcType="VARCHAR"/>
        <result property="plannedPrice" column="planned_price" jdbcType="NUMERIC"/>
        <result property="purchaseUnitPrice" column="purchase_unit_price" jdbcType="NUMERIC"/>
        <result property="purchaseMoney" column="purchase_money" jdbcType="NUMERIC"/>
        <result property="ingredient" column="ingredient" jdbcType="VARCHAR"/>
        <result property="gramHeavy" column="gram_heavy" jdbcType="VARCHAR"/>
        <result property="productDescribe" column="product_describe" jdbcType="VARCHAR"/>
    </resultMap>


    <!-- 基本字段 -->
    <sql id="Base_Column_List">
        id
        , receiptid, product_id, depot_name, product_num, planned_price, purchase_money    </sql>
    <sql id="Column_List">
        p.id
        , p.receiptid, p.product_id, p.depot_name, p.product_num, p.planned_price, p.purchase_money    </sql>

    <!-- 查询单个 -->
    <select id="queryById" resultMap="PurchaseReceiptDetailsMap">
        select
        <include refid="Base_Column_List"/>
        from purchase_receipt_details
        where id = #{id}
    </select>

    <!-- 查询全部 -->
    <select id="queryAll" resultMap="PurchaseReceiptDetailsMap">
        select
        <include refid="Base_Column_List"/>
        from purchase_receipt_details
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAndByPojo" resultMap="PurchaseReceiptDetailsMap">
        select
        <include refid="Base_Column_List"/>
        from purchase_receipt_details
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="receiptid != null and receiptid != ''">
                and receiptid = #{receiptid}
            </if>
            <if test="productId != null and productId != ''">
                and product_id = #{productId}
            </if>
            <if test="depotName != null and depotName != ''">
                and depot_name = #{depotName}
            </if>
            <if test="productNum != null">
                and product_num = #{productNum}
            </if>
            <if test="plannedPrice != null">
                and planned_price = #{plannedPrice}
            </if>
            <if test="purchaseMoney != null">
                and purchase_money = #{purchaseMoney}
            </if>
        </where>
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryOrByPojo" resultMap="PurchaseReceiptDetailsMap">
        select
        <include refid="Base_Column_List"/>
        from purchase_receipt_details
        <where>
            <if test="id != null">
                or id = #{id}
            </if>
            <if test="receiptid != null and receiptid != ''">
                or receiptid = #{receiptid}
            </if>
            <if test="productId != null and productId != ''">
                or product_id = #{productId}
            </if>
            <if test="depotName != null and depotName != ''">
                or depot_name = #{depotName}
            </if>
            <if test="productNum != null">
                or product_num = #{productNum}
            </if>
            <if test="plannedPrice != null">
                or planned_price = #{plannedPrice}
            </if>
            <if test="purchaseMoney != null">
                or purchase_money = #{purchaseMoney}
            </if>
        </where>
    </select>

    <!-- 新增所有列 -->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into purchase_receipt_details(receiptid, product_id, depot_name, product_num, planned_price,
                                             purchase_money)
        values ( #{receiptid}, #{productId}, #{depotName}, #{productNum}, #{plannedPrice}, #{purchaseMoney})
    </insert>

    <!-- 批量新增 -->
    <insert id="insertBatch">
        insert into purchase_receipt_details(id, receiptid, product_id, depot_name, product_num, planned_price,
        purchase_money)
        values
        <foreach collection="entities" item="item" index="index" separator=",">
            (
            #{item.id}, #{item.receiptid}, #{item.productId}, #{item.depotName}, #{item.productNum},
            #{item.plannedPrice}, #{item.purchaseMoney} )
        </foreach>
    </insert>

    <!-- 通过主键修改数据 -->
    <update id="update">
        update frameproject.purchase_receipt_details
        <set>
            <if test="receiptid != null and receiptid != ''">
                receiptid = #{receiptid},
            </if>
            <if test="productId != null and productId != ''">
                product_id = #{productId},
            </if>
            <if test="depotName != null and depotName != ''">
                depot_name = #{depotName},
            </if>
            <if test="productNum != null">
                product_num = #{productNum},
            </if>
            <if test="plannedPrice != null">
                planned_price = #{plannedPrice},
            </if>
            <if test="purchaseMoney != null">
                purchase_money = #{purchaseMoney},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from purchase_receipt_details
        where id = #{id}
    </delete>

    <!-- 总数 -->
    <select id="count" resultType="int">
        select count(*)
        from purchase_receipt_details
    </select>

    <select id="queryAllByOrderId" resultMap="PurchaseReceiptDMap">
        select
        <include refid="Column_List"/>,b.product_name,c.unit_name,b.purchase_unit_price,b.ingredient,b.gram_heavy,b.product_describe
        from frameproject.purchase_receipt_details p
        INNER JOIN base_product b on p.product_id=b.product_id
        INNER JOIN base_unit c on b.unit_id=c.unit_id
        where receiptid=#{id}
    </select>
</mapper>
